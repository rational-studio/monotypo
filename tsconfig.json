{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "stripInternal": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declarationMap": false,
    "declaration": false,
    "outDir": "dist"
  },
  "include": ["./src/**/*"]
}
